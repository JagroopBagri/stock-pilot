generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id                  Int             @id @default(autoincrement())
  firstName           String          @db.VarChar(30)
  lastName            String          @db.VarChar(30)
  username            String          @unique @db.VarChar(50)
  email               String          @unique @db.VarChar(255)
  password            String          @db.VarChar(255)
  isVerified          Boolean         @default(false)
  forgotPasswordToken String?
  purchasedTrades     PurchaseTrade[]
  saleTrades          SaleTrade[]
  createdAt           DateTime        @default(now()) @db.Timestamptz(6)
  updatedAt           DateTime        @updatedAt @db.Timestamptz(6)
}

model PurchaseTrade {
  id          Int         @id @default(autoincrement())
  userId      Int
  user        User        @relation(fields: [userId], references: [id])
  stockId     Int
  stock       Stock       @relation(fields: [stockId], references: [id])
  quantity    Int
  price       Decimal     @db.Decimal(10, 2)
  totalAmount Decimal     @db.Decimal(10, 2)
  netProfit   Decimal     @db.Decimal(10, 2)
  date        DateTime
  notes       String?     @db.VarChar(255)
  saleTrades  SaleTrade[] 
  createdAt   DateTime    @default(now()) @db.Timestamptz(6)
  updatedAt   DateTime    @updatedAt @db.Timestamptz(6)
}

model SaleTrade {
  id              Int           @id @default(autoincrement())
  userId          Int
  user            User          @relation(fields: [userId], references: [id])
  purchaseTradeId Int
  purchaseTrade   PurchaseTrade @relation(fields: [purchaseTradeId], references: [id], onDelete: Cascade)
  quantity        Int
  sellPrice       Decimal       @db.Decimal(10, 2)
  totalAmount     Decimal       @db.Decimal(10, 2)
  buyPrice        Decimal       @db.Decimal(10, 2)
  netProfit       Decimal       @db.Decimal(10, 2)
  date            DateTime
  notes           String?       @db.VarChar(255)
  createdAt       DateTime      @default(now()) @db.Timestamptz(6)
  updatedAt       DateTime      @updatedAt @db.Timestamptz(6)
}

model Stock {
  id           Int             @id @default(autoincrement())
  ticker       String          @unique @db.VarChar(20)
  companyName  String
  currentPrice Decimal?        @db.Decimal(10, 2)
  lastUpdated  DateTime?
  trades       PurchaseTrade[]
  createdAt    DateTime        @default(now()) @db.Timestamptz(6)
  updatedAt    DateTime        @updatedAt @db.Timestamptz(6)
}
